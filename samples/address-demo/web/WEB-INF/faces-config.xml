<!DOCTYPE faces-config PUBLIC
        "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
        "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<faces-config>

    <application>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>fr</supported-locale>
            <supported-locale>es</supported-locale>
        </locale-config>
    </application>

    <!-- Phase Listener for injecting bean values manually and updating the submit button status (see PhaseSync for details). -->
    <lifecycle>
        <phase-listener>
            com.icesoft.applications.faces.address.PhaseSync
        </phase-listener>
    </lifecycle>

    <!-- Converter capitalizes the first letter in each word in a String. -->
    <converter>
        <converter-id>fixCaps</converter-id>
        <converter-class>
            com.icesoft.applications.faces.address.WordCapitalizationConverter
        </converter-class>
    </converter>

    <managed-bean>
        <description>
            Backing bean for the address form components
        </description>
        <managed-bean-name>address</managed-bean-name>
        <managed-bean-class>
            com.icesoft.applications.faces.address.AddressBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>

    <managed-bean>
        <description>
            Toggles ReadMe information at the bottom of the application.
        </description>
        <managed-bean-name>ReadmeBean</managed-bean-name>
        <managed-bean-class>
            com.icesoft.applications.faces.address.ReadmeBean
        </managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>


    <navigation-rule>
        <from-view-id>/address.jspx</from-view-id>
        <navigation-case>
            <from-outcome>submit</from-outcome>
            <to-view-id>/response.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/response.jspx</from-view-id>
        <navigation-case>
            <from-outcome>return</from-outcome>
            <to-view-id>/address.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/address.iface</from-view-id>
        <navigation-case>
            <from-outcome>submit</from-outcome>
            <to-view-id>/response.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/response.iface</from-view-id>
        <navigation-case>
            <from-outcome>return</from-outcome>
            <to-view-id>/address.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/address_ice.jspx</from-view-id>
        <navigation-case>
            <from-outcome>submit</from-outcome>
            <to-view-id>/response_ice.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/response_ice.jspx</from-view-id>
        <navigation-case>
            <from-outcome>return</from-outcome>
            <to-view-id>/address_ice.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/address_ice.iface</from-view-id>
        <navigation-case>
            <from-outcome>submit</from-outcome>
            <to-view-id>/response_ice.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/response_ice.iface</from-view-id>
        <navigation-case>
            <from-outcome>return</from-outcome>
            <to-view-id>/address_ice.iface</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

</faces-config>
